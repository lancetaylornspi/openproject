<%=
  render(Primer::Alpha::UnderlineNav.new(align: :left, label: "Tabs")) do |component|
    menu_items.each do |node|
      component.with_tab(selected: @tab == node.name,
                         href: url_for(node.url)) do |c|
        c.with_text { t("js.work_packages.tabs.#{node.name}") }
        count = node.badge(work_package:).to_i
        c.with_counter(count:) if count > 0
      end
    end
  end
%>
